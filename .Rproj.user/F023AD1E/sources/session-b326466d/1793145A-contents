conditional_effects(approve_mod)

fit <- stan_glm(mpg ~ ., data = mtcars)

posterior <- as.matrix(approve_mod)

plot_title <- ggtitle("Posterior distributions",
                      "with medians and 80% intervals")
mcmc_areas(posterior,
           pars = c("b_intonationsarcastic", "b_modifier_typegradPsubjPneg", 
                    "b_modifier_typegradPsubjPneg", 
                    "b_intonationsarcastic:modifier_typegradPsubjPneg",
                    "b_intonationsarcastic:modifier_typegradPsubjPpos"
                    ),
           prob = 0.8) + plot_title

library(modelr)
library(tidybayes)
library(distributional)
df = approve_df %>% 
  data_grid(intonation,modifier_type) %>%
  add_fitted_draws(approve_mod, dpar = TRUE, category = "response",
                   re_formula = NA) 

df_s = df %>% filter(intonation == "sarcastic")
df_d = df %>% filter(intonation == "declarative")

dist_df = data.frame(effect = df_s$mu - df_d$mu)
# Vectorized distribution types, like distributional::dist_normal()
# and posterior::rvar(), can be used with the `xdist` / `ydist` aesthetics
dist_df %>%
  ggplot(aes(x = effect)) +
  stat_halfeye()

